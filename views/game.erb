<h1 id="blackjack_title">Blackjack</h1>

<br/>

<% if @show_play_or_quit_buttons %>
  <p><strong>Play again?</strong></p>
  <div id="play_or_quit_buttons">
      <a href="/bet" class="btn btn-primary">Yes</a>
      <a href="/game_over" class="btn btn-warning">No</a> 
  </div>
<% end %>

<div class="well">
  <h4>Dealer's cards:</h4>
    <% session[:dealer_cards].each do |card| %>
      <% if session[:turn] != "dealer" && card == session[:dealer_cards].first %>
        <img src='/images/cards/cover.jpg' class='card_image'>
      <% else %>
        <%= card_image(card) %>
      <% end %>
    <% end %>

    <% if @show_dealer_hit_button %>
      <p>
        <h5>Dealer has <%= calculate_total(session[:dealer_cards]) %> and will hit.</h5>
        <form action="/game/dealer/hit" method="post">
          <input type="submit" class="btn btn-primary" value="Click to see dealer card &rarr;"/>
        </form>
      </p>
    <% end %>
</div>

<br/>

<div class="well">
  <h4><%= "#{session[:player_name]}'s cards:" %></h4>
    <% session[:player_cards].each do |card| %>
      <%= card_image(card) %>
    <% end %>
</div>

<% if @show_hit_or_stay_buttons %>

<div class="well" id="player_actions">
  <h4><%= session[:player_name] + " has " + calculate_total(session[:player_cards]).to_s %>. What would <%= session[:player_name] %> like to do?</h4>
  <h5><%= "You bet \$#{session[:player_bet]}, and you currently have \$#{session[:player_money]}" %></h5>

  <br/>

  <div id="player_decision_buttons">
    <form id="hit_form" action="/game/player/hit" method="post">
      <input type="submit" class="btn btn-large btn-success" value="Hit"/>
    </form>

    <form id="stay_form" action="/game/player/stay" method="post">
      <input type="submit" class="btn btn-large btn-warning" value="Stay"/>
    </form>
  </div>
</div>

<% end %>